<?xml version="1.0" encoding="UTF-8"?>
<JPanel xmlns:layout="https://github.com/daanipuui/swing-inflater/swing-inflater.xsd">
    
    <io.github.daanipuui.swing.inflater.layout.RelativeLayout margins="5,5,5,5"/>

    <JPanel
        name="#1"
        layout:width="0.2"
        layout:height="0.5">

        <io.github.daanipuui.swing.inflater.layout.RelativeLayout
            margins="5,5,5,5"/>

        <JPanel
            layout:width="1"
            layout:height="1"
            background="#FFFF00"/>

    </JPanel>

    <JPanel
        name="#2"
        layout:width="0.8"
        layout:height="0.5"
        layout:rightOf="#1">
        
        <io.github.daanipuui.swing.inflater.layout.RelativeLayout margins="5,5,5,5"/>

        <JPanel
            layout:width="1"
            layout:height="1"
            background="#FF00FF"/>

    </JPanel>

    <JPanel
        name="#3"
        layout:width="0.2"
        layout:height="0.5"
        layout:below="#1">
        
        <io.github.daanipuui.swing.inflater.layout.RelativeLayout margins="5,5,5,5"/>

        <JPanel
            layout:width="1"
            layout:height="1"
            background="#00FFFF"/>

    </JPanel>

    <JPanel
        name="#4"
        layout:width="0.8"
        layout:height="0.5"
        layout:rightOf="#3"
        layout:alignTop="#3">

        <io.github.daanipuui.swing.inflater.layout.RelativeLayout margins="5,5,5,5"/>

        <JPanel
            layout:width="1"
            layout:height="1"
            background="#00FF00">

            <JButton
                name="exit"
                text="exit"
                actionListener="io.github.daanipuui.swing.inflater.layout.StartSwingApplication::onClick"/>

        </JPanel>

    </JPanel>

</JPanel>