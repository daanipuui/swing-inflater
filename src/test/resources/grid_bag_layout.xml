<?xml version="1.0"?>
<JPanel xmlns:layout="https://github.com/daanipuui/swing-inflater/swing-inflater.xsd">

    <GridBagLayout/>

    <JButton
        name="Button 1"
        text="Button 1"
        layout:fill="HORIZONTAL"
        layout:gridx="0"
        layout:gridy="0"
        layout:weightx="0.5"/>

    <JButton
        name="Button 2"
        text="Button 2"
        layout:fill="HORIZONTAL"
        layout:gridx="1"
        layout:gridy="0"
        layout:weightx="0.5"/>

    <JButton
        name="Button 3"
        text="Button 3"
        layout:fill="HORIZONTAL"
        layout:gridx="2"
        layout:gridy="0"
        layout:weightx="0.5"/>

    <JButton
        name="Button 4"
        text="Long-Named Button 4"
        layout:fill="HORIZONTAL"
        layout:ipady="40"
        layout:gridwidth="3"
        layout:gridx="0"
        layout:gridy="1"
        layout:weightx="0.0"/>

    <JButton
        name="Button 5"
        text="Button 5"
        layout:fill="HORIZONTAL"
        layout:ipady="0"
        layout:weighty="1.0"
        layout:anchor="PAGE_END"
        layout:insets="10,0,0,0"
        layout:gridx="1"
        layout:gridwidth="2"
        layout:gridy="2"/>

</JPanel>