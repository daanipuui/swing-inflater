<?xml version="1.0"?>
<JPanel
    layout="com.danielpuiu.swing.inflater.layout.RelativeLayout"
    layout:margins="10,10,10,10"
    layout:padding="10,10,10,10">

    <JLabel
        name="#1"
        background="0xFF0096"
        text="Description"/>

    <JTextField
        name="#2"
        background="0xFF0000"
        constraint:rightOf="#1"
        constraint:centerVertical="#1"
        constraint:alignParentRight="true"/>

    <JLabel
        name="#3"
        background="0xFF00FF"
        text="Market name"
        constraint:width=".5"
        constraint:below="#1"
        constraint:centerVerticalInParent="true"/>

    <JTextField
        name="#4"
        background="0x00FF00"
        constraint:width=".2"
        constraint:rightOf="#3"
        constraint:alignTop="#3"
        constraint:alignLeft="#2"
        constraint:alignParentBottom="true"/>

    <JButton
        name="#5"
        text="click me"
        constraint:rightOf="#4"
        constraint:below="#2"
        constraint:alignParentBottom="true"/>

</JPanel>